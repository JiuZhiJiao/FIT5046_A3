<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/watchlist_lv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Movie Title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/watchlist_lv_release"
        android:layout_marginLeft="32dp"
        android:layout_below="@+id/watchlist_lv_title"
        android:layout_marginTop="8dp"
        android:text="Release Date: 2020-02-20"
        android:textSize="15dp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/watchlist_lv_added_date"
        android:layout_marginLeft="32dp"
        android:layout_below="@id/watchlist_lv_release"
        android:layout_marginTop="8dp"
        android:text="Added At: 2020-01-01 00:00:00"
        android:textSize="15dp"/>

</RelativeLayout>