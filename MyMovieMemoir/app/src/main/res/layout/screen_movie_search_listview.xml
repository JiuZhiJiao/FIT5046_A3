<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/movie_search_image"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:scaleType="centerInside"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/movie_search_lv_tv_name"
        android:layout_width="210dp"
        android:layout_height="65dp"
        android:layout_alignTop="@+id/movie_search_image"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/movie_search_image"
        android:text="Movie Name"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/movie_search_lv_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_search_lv_tv_name"
        android:layout_alignBottom="@+id/movie_search_image"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="18dp"
        android:layout_toEndOf="@+id/movie_search_image"
        android:text="2020"
        android:textSize="15dp"
        android:textStyle="italic" />

</RelativeLayout>